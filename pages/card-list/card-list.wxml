<!--pages/card-list/card-list.wxml-->
<import src="/shared/navbar.wxml" />

<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称Test </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="usermotto">
    <text class="user-motto">{{motto}} Test</text>
  </view>

  <!--shared/navbar.wxml-->
  <template is="navbar" />
  <view class="cardlist-active"></view>
</view>

