/* pages/card-view/card-view.wxss */

.add-btn {
  position: absolute;
  top: 2vh;
  right: 2vh;
}

.add-btn image {
  height: 80rpx;
  width: 80rpx;
}

.card-title {
  font-size: 40rpx;
  font-weight: 600;
  text-align: center;
  margin: 15rpx 0;
}

.card-logo {
  width: 118rpx;
  height: 118rpx;
  background-size: cover;
  margin: 15rpx auto;
  border-radius: 50%;
}

.card {
  width: 680rpx;
  height: 420rpx;
  background-size: cover;
  background-position: center;
  position: relative;
  border-radius:6rpx;
  box-shadow: 0px 0 4px 1px #F0F0F7;
  margin: 15rpx auto;
  position: relative;
}

.stamps {
  height: 312rpx;
  display: flex;
  justify-content: left;
  flex-wrap: wrap;
  position: absolute;
  top: 50%;
  transform: translate(0,-50%);
}

.stamps image {
  height:56rpx;
  max-width:76rpx;
  margin:50rpx 46rpx;
}

.reward-text {
  text-align: center;
  margin: 40rpx 0;
}

.reward-icon {
  height: 160rpx;
  width: 400rpx;
}

.reward-icon-container {
  margin: 0 auto;
  width: 400rpx;
}

.greyscale {
  filter: grayscale(100%);
}

.redeem {
  font-size: 20rpx;
  text-align: center;
}

.locations {
  width: 680rpx;
  margin: 40rpx auto;
}

.location-header {
  font-weight: 600;
}

.location {
  font-size: 28rpx;
  margin: 15rpx 0;
}

.cardview-active {
  width:110rpx;
  position:absolute;
  bottom:0;
  height:18rpx;
  background-color:#FFF600;
  left:17.5%;
  z-index:0;
}

