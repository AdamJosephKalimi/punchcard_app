.animation-container, .ground, .rock, .cup, bottom, .body, .TPart, .BPart, .handle, .inner
, .alpha
, .coffee
, .drops
, .smileContainer
, .eyes
, .eyeBall
, .smile
, .vapour
, .glare  {
  position: absolute;
  margin: auto;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}

.animation-container {
  width: 300rpx;
  height: 300rpx;
  background-color: #ffdeda;
  border-radius: 50%;
  /* z-index: -1; */
}
.ground {
  width: 100%;
  height: 6rpx;
  border-radius: 6rpx;
  background-color: #514f62;
  /* left:-40px; */
  top: 100%;
}
.rock {
  background-color: #ae8e83;
  width: 10rpx;
  height: 7rpx;
  left: -80%;
  top: -15rpx;
  border: 5rpx solid #514f62;
  border-radius: 90rpx 90rpx 0 0;
}
.cup {
  /* background-color:red; */
  width: 200rpx;
  height:200rpx;
  top: 100rpx;
}
.bottom {
  background-color: #dcc1b7;
  width: 120rpx;
  height: 19rpx;
  top: 85%;
  border-bottom: 5rpx solid #514f62;
  border-left: 5rpx solid #514f62;
  border-right: 5rpx solid #514f62;
}
.body {
  background-color: #ffebe3;
  width: 200rpx;
  height: 200rpx;
  top: -32%;
  border-radius: 10rpx 10rpx 45rpx 45rpx;
  border: 5rpx solid #514f62;
  left: -2.5%;
}
.TPart {
  height: 20rpx;
  background-color: #d15b51;
  /* border-top:5px solid #514f62; */
  border-bottom: 5rpx solid #514f62;
  border-radius: 4rpx 4rpx;
  top: -87.5%;
}
.BPart {
  height: 30px;
  background-color: #d15b51;
  border-top: 5rpx solid #514f62;
  /* border-bottom: 3px solid #514f62; */
  top: 82.5%;
  
  border-radius: 0 0 45px 45px;
}
.handle{
  background-color:#c15147;
  width:200rpx;
  left:25%;
  top:-50%;
  border:5rpx solid #514f62;
  border-radius:0 90rpx 90rpx 0;
  height:100rpx;
}
.inner{
  background-color:#ffdeda;
  width:50%;
  height:50%;
  left:25%;
  border:inherit;
  border-radius:inherit;
}
.alpha{
  /* background-color:red; */
  /* background-color:rgba(239,215,205,0.6); */
  background-color:rgba(0,0,0,0.05);
  width:100rpx;
  height:90%;
  left:-100rpx;
  border-radius:0 0 0 30rpx;
}
.coffee{
  /* background-color:white; */
  width:100rpx;
  height:70rpx;
  top:35rpx;
  left:100rpx;
}
.drops{
  /* background-color:#b4947d; */
}
.drops{
  width:12rpx;
  left:40rpx;
  border-left:4rpx solid #514f62;
  border-right:4rpx solid #514f62;
  border-bottom:4rpx solid #514f62;
  border-radius:0 0 90rpx 90rpx;
  background-color:#b4947d;
}
.drops:nth-child(2){
  left:-10rpx;
  height:30rpx;
  top:-40rpx;
}

.smileContainer{
  /* background-color:red; */
  width:140rpx;
  height:100rpx;
}
.eyes{
  width:20rpx;
  height:20rpx;
  left:-50%;
  top:-50rpx;
  border-radius:50%;
  background-color:#514f62;
}
.eyes:nth-child(2){
  left:50%;
}
.eyeBall{
  width:40%;
  height:40%;
  border-radius:50%;
  background-color:white;
}
.smile{
  width:50rpx;
  height:20rpx;
  background-color:white;
  top:40rpx;
  border:4rpx solid #514f62;
  border-bottom-left-radius:90rpx;
  border-bottom-right-radius:90rpx;
}
.vapour{
  /* background-color:white; */
  height:30rpx;
  top:-60rpx;
  left:-160rpx;
  border-radius:10rpx;
  width:10rpx;
}

.vapour:nth-child(1){
  opacity:1;
  animation:evaporate 700ms infinite;
  animation-delay: 200ms;
}
.vapour:nth-child(2){
  opacity:1;
  animation:evaporate 700ms infinite;
  animation-delay: 400ms;
}
.vapour:nth-child(3){
  opacity:1;
  animation:evaporate 700ms infinite;
  animation-delay: 600ms;  
}
.vapour:nth-child(4){
  opacity:1;
  animation:evaporate 700ms infinite;
  animation-delay: 800ms;  
}
.vapour:nth-child(5){
  opacity:1;
  animation:evaporate 700ms infinite;
  animation-delay: 1000ms;
}
.vapour:nth-child(6){
  opacity:1;
  animation:evaporate 700ms infinite;
  animation-delay: 1200ms;
}
.vapour:nth-child(7){
  opacity:1;
  animation:evaporate 700ms infinite;
  animation-delay: 1400ms;  
}
.vapour:nth-child(8){
  opacity:1;
