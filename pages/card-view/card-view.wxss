.vapour:nth-child(4){
  left:-40px;
}
.vapour:nth-child(5){
  left:0px;
}
.vapour:nth-child(6){
  left:40px;
}
.vapour:nth-child(7){
  left:80px;
}
.vapour:nth-child(8){
  left:120px;
}
.vapour:nth-child(9){
  left:160px;
}

.glare{
  width:50%;
  height:90%;
  background-color:rgba(210,105,30,0.7);
  border-radius:inherit;
}

@keyframes evaporate{
  0%{
    transform:translateY(0px);
  }
  100%{
    opacity:0;
    transform:translateY(-70rpx);
  }
}
.vapour p{
  color:red;
}
