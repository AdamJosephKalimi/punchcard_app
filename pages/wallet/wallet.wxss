/* pages/wallet/wallet.wxss */
.card-counter {
  text-align: center;
  margin: 30rpx;
  font-size: 24rpx;
  color: #888888;
}

.wallet-cards {
  padding: 0 20rpx;
}

.wallet-card {
  width: 680rpx;
  height: 200rpx;
  margin: 36rpx 20rpx;
  background-size: cover;
  background-position: center;
  position: relative;
  border-radius:6rpx;
  box-shadow: 0px 0 4px 1px #F0F0F7;
}

.wallet-logo {
  width: 128rpx;
  height: 128rpx;
  background-size: cover;
  position: absolute;
  top: 50%;
  left: 60rpx;
  transform: translate(0,-50%);
  border-radius: 50%;
}

.wallet-title {
  width: 164rpx;
  text-align: center;
  font-size: 28rpx;
  position: absolute;
  top: 50%;
  right: 50%;
  transform: translate(50%,-50%);
  font-weight: 600;
}

.wallet-x {
  font-size: 20rpx;
  bottom: 10rpx;
  right: 15rpx;
  position: absolute;
}

.wallet-active {
  width:110rpx;
  position:absolute;
  bottom:0;
  height:18rpx;
  background-color:#FFF600;
  left:17.5%;
  z-index:0;
}