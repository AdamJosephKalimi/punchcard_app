/**app.wxss**/
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0 10rpx;
  box-sizing: border-box;
  background-color: #F9F9FF;
} 


/** SHARED COMPONENTS **/

/** navbar **/
.navbar-container {
  width: 100vw;
  background-color: #fff;
  height: 7vh;
  position: relative;
  bottom: 0;
  box-shadow: 0 2px 5px 0 #929292;
}

.navbar-scan-btn {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: -40rpx;
  background-color: #FFF600;
  transform: translate(-50%,0);
}