/**app.wxss**/
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0 10rpx;
  box-sizing: border-box;
  background-color: #F9F9FF;
  position: relative;
} 

/** SHARED COMPONENTS **/

/** navbar **/
.navbar-container {
  width: 100vw;
  background-color: #fff;
  height: 7vh;
  position: relative;
  bottom: 0;
  box-shadow: 0 2px 5px 0 #929292;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.navbar-container image {
  width: 4vh;
  height: 4vh;
  padding: 10rpx;
}

.navbar-icon {
  width: 6vh;
  display: flex;
  justify-content: center;
}

.navbar-active {
  border-bottom: solid 3px #FFF600;
  position: relative;
  bottom: 6rpx;
}

.navbar-scan-btn {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: -40rpx;
  background-color: #FFF600;
  transform: translate(-50%,0);
  display: flex;
  justify-content: center;
  align-items: center;
}

.navbar-scan-btn image {
  height: 50rpx;
  width: 50rpx;
}